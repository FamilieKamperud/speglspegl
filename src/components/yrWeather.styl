.yrWeather
  display flex
  align-items center
  justify-content flex-end

.yrWeather-symbol--large
  filter grayscale(100%);
  height 8rem

.yrWeather-temperature--large
  font-size 4rem
  margin 0

.yrWeather-effective-temperature--large
  display flex
  flex-direction column
  margin 0 1.7em 0 0.8em
  align-items center
  justify-content center

.yrWeather-effective-temperature-text--large
  margin 0
  text-transform uppercase

.yrWeather-effective-temperature-temp
  margin 0
  font-size 2rem

.yrWeather-symbol--small
  filter grayscale(100%)
  height 5rem

.yrWeather-temperature--small
  font-size 2.8rem
  margin 0

.yrWeather-effective-temperature--small
  display flex
  flex-direction column
  margin 0 1.7em 0 0.8em
  align-items center
  justify-content center
